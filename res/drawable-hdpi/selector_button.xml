<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed -->
    <item android:state_pressed="true"><shape>
            <stroke android:width="1px" android:color="#666666" />

            <gradient android:angle="270" android:endColor="@color/color_blue" android:startColor="@color/color_blue" />

            <corners android:radius="12dp" />
        </shape></item>
    <!-- default -->
    <item><shape>
            <solid android:color="#666666" />

            <stroke android:width="1px" android:color="#666666" />

            <gradient android:angle="270" android:endColor="#FFFFFF" android:startColor="#FFFFFF" />

            <corners android:radius="12dp" />
        </shape></item>

</selector>